<Window x:Class="TelephoneCRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Téléphones" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="📱 Gestion des Téléphones" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
        </StackPanel>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Formulaire CRUD -->
            <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Formulaire Téléphone" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#34495E"/>
                    
                    <Label Content="IMEI:" FontWeight="Bold"/>
                    <TextBox x:Name="txtImei" Margin="0,0,0,10" Padding="5" Height="30"/>
                    
                    <Label Content="Marque:" FontWeight="Bold"/>
                    <TextBox x:Name="txtMarque" Margin="0,0,0,10" Padding="5" Height="30"/>
                    
                    <Label Content="Modèle:" FontWeight="Bold"/>
                    <TextBox x:Name="txtModele" Margin="0,0,0,10" Padding="5" Height="30"/>
                    
                    <Label Content="Prix (€):" FontWeight="Bold"/>
                    <TextBox x:Name="txtPrix" Margin="0,0,0,15" Padding="5" Height="30"/>
                    
                    <!-- Boutons d'action -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button x:Name="btnAjouter" Content="➕ Ajouter" Width="80" Height="35" Margin="5" 
                                Background="#27AE60" Foreground="White" BorderThickness="0" 
                                Click="BtnAjouter_Click" Cursor="Hand"/>
                        <Button x:Name="btnModifier" Content="✏️ Modifier" Width="80" Height="35" Margin="5" 
                                Background="#F39C12" Foreground="White" BorderThickness="0" 
                                Click="BtnModifier_Click" Cursor="Hand"/>
                        <Button x:Name="btnSupprimer" Content="🗑️ Supprimer" Width="80" Height="35" Margin="5" 
                                Background="#E74C3C" Foreground="White" BorderThickness="0" 
                                Click="BtnSupprimer_Click" Cursor="Hand"/>
                    </StackPanel>
                    
                    <Button x:Name="btnVider" Content="🔄 Vider les champs" Width="150" Height="30" Margin="0,10" 
                            Background="#95A5A6" Foreground="White" BorderThickness="0" 
                            Click="BtnVider_Click" Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- Séparateur -->
            <Rectangle Grid.Column="1" Fill="#BDC3C7" Width="1"/>

            <!-- Liste des téléphones -->
            <Border Grid.Column="2" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Liste des Téléphones" FontSize="18" FontWeight="Bold" Foreground="#34495E"/>
                        <Button x:Name="btnActualiser" Content="🔄" Width="30" Height="30" Margin="10,0,0,0" 
                                Background="#3498DB" Foreground="White" BorderThickness="0" 
                                Click="BtnActualiser_Click" Cursor="Hand" ToolTip="Actualiser la liste"/>
                    </StackPanel>
                    
                    <DataGrid x:Name="dgTelephones" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False" 
                              SelectionMode="Single" GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column" RowHeight="35"
                              SelectionChanged="DgTelephones_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="IMEI" Binding="{Binding Imei}" Width="120"/>
                            <DataGridTextColumn Header="Marque" Binding="{Binding Marque}" Width="80"/>
                            <DataGridTextColumn Header="Modèle" Binding="{Binding Modele}" Width="100"/>
                            <DataGridTextColumn Header="Prix (€)" Binding="{Binding Prix, StringFormat='{}{0:F2}'}" Width="80"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ECF0F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Barre de statut -->
        <StatusBar Grid.Row="2" Height="25" Background="#34495E">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Prêt" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>